{
  "name": "MessageIn-Display",
  "version": "1.7.9",
  "serverUrl": "https://www.cyupeng.com",
  "connectUrl": "wss://www.cyupeng.com",
  "description": "MessageIn显示端 - 实时消息展示系统",
  "author": "CyrilGuo",
  "main": "electron-danmaku.js",
  "scripts": {
    "start": "node process-protection.js",
    "start-protected": "node process-protection.js",
    "build": "electron-builder build --win --publish never",
    "dist": "electron-builder"
  },
  "license": "GNUV3",
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-updater": "^6.1.8",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.messagein.app",
    "publish": [
      {
        "provider": "generic",
        "url": "http://www.cyupeng.com/download/"
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "include": "installer.nsh"
    },
    "extraResources": [
      {
        "from": "extraResources/node.exe",
        "to": "../node.exe"
      },
      {
        "from": "extraResources/node_modules",
        "to": "../node_modules"
      },
      {
        "from": "process-protection.js",
        "to": "../process-protection.js"
      }
    ]
  }
}
